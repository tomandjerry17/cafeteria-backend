{
  "info": {
    "name": "Cafeteria API",
    "_postman_id": "cafeteria-api-collection",
    "description": "Postman collection for testing Cafeteria backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "http://localhost:4000/auth/register", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"studentId\": \"2025-001\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "http://localhost:4000/auth/login", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["auth", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Menu",
      "item": [
        {
          "name": "Get All Menu Items",
          "request": { "method": "GET", "url": "http://localhost:4000/menu" }
        },
        {
          "name": "Get Menu Item by ID",
          "request": { "method": "GET", "url": "http://localhost:4000/menu/:id" }
        },
        {
          "name": "Create Menu Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/menu",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Burger\",\n  \"description\": \"Delicious beef burger\",\n  \"price\": 5.99,\n  \"categoryId\": \"uuid-here\"\n}"
            }
          }
        },
        {
          "name": "Update Menu Item",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/menu/:id",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Burger\",\n  \"price\": 6.49\n}"
            }
          }
        },
        {
          "name": "Delete Menu Item",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/menu/:id"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/orders",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupType\": \"take-out\",\n  \"pickupTime\": \"2025-09-05T12:00:00Z\",\n  \"items\": [\n    { \"itemId\": \"uuid-here\", \"quantity\": 2 }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": { "method": "GET", "url": "http://localhost:4000/orders/:id" }
        },
        {
          "name": "Get User Orders",
          "request": { "method": "GET", "url": "http://localhost:4000/users/:userId/orders" }
        },
        {
          "name": "Get Staff Orders",
          "request": { "method": "GET", "url": "http://localhost:4000/staff/orders" }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/orders/:id/status",
            "body": { "mode": "raw", "raw": "{ \"status\": \"READY\" }" }
          }
        },
        {
          "name": "Mark Order as Picked Up",
          "request": {
            "method": "PUT",
            "url": "http://localhost:4000/orders/:id/pickup"
          }
        }
      ]
    },
    {
      "name": "Favorites & Feedback",
      "item": [
        {
          "name": "Add Favorite",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/favorites",
            "body": { "mode": "raw", "raw": "{ \"itemId\": \"uuid-here\" }" }
          }
        },
        {
          "name": "Get Favorites",
          "request": {
            "method": "GET",
            "url": "http://localhost:4000/favorites"
          }
        },
        {
          "name": "Post Feedback",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:4000/feedback",
            "body": {
              "mode": "raw",
              "raw": "{ \"itemId\": \"uuid-here\", \"rating\": 5, \"comment\": \"Great food!\" }"
            }
          }
        },
        {
          "name": "Get Feedback for Menu Item",
          "request": { "method": "GET", "url": "http://localhost:4000/feedback/:menuId" }
        }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Restock Item",
          "request": {
            "method": "POST",
            "url": "http://localhost:4000/inventory/restock",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": { "mode": "raw", "raw": "{ \"itemId\": \"uuid-here\", \"quantity\": 10 }" }
          }
        },
        {
          "name": "Get Inventory Logs",
          "request": { "method": "GET", "url": "http://localhost:4000/inventory/logs" }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": { "method": "GET", "url": "http://localhost:4000/notifications" }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PUT",
            "url": "http://localhost:4000/notifications/:id/read"
          }
        }
      ]
    }
  ]
}
