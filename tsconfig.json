{
  "compilerOptions": {
    // File Layout
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // Environment
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["esnext"],
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Compatibility
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
